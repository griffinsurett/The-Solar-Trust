---
// src/pages/contact-us.astro
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import ExtendedLayout from "../layouts/ExtendedLayout.astro";
import { ContactData } from "@/content/SiteData";
---
<ExtendedLayout title="Contact Us" description="Get in touch with Cleanomatic">
  <SecondaryHero title="Contact Us" description="Get in touch with Cleanomatic" />
  <section class="p-[var(--spacing-lg)]">
    <h1>Contact Us</h1>
    <p>
      If you have any questions, please email us at 
      <a href="mailto:griffinswebservices@gmail.com">griffinswebservices@gmail.com</a>
      or call 
      <a href={`tel:${ContactData.phone}`}>{ContactData.phone}</a>.
    </p>
  </section>
</ExtendedLayout>
