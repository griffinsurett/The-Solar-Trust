---
// src/pages/index.astro
import ExtendedLayout from "@/layouts/ExtendedLayout.astro";
import Section from "@/components/Section.astro";
import PrimaryHero from "@/components/StaticSections/PrimaryHero.astro";
import HeroBg from "@/assets/background.svg";
import { SiteData } from "@/content/SiteData";
import { Image } from "astro:assets";
import SolarTrustTeam from "@/assets/Solar-Trust-Team.webp";
import Owner from "@/assets/paul.jpeg";
import SolarPanels from "@/assets/solar-cell.jpg";
import Heading from "@/components/Heading";
import LogoLoop from "@/components/LoopComponents/LogoLoop.astro";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title=`${SiteData.title} | ${SiteData.tagline}`
  description={SiteData.description}
>

  <!-- Hero Section -->
  <PrimaryHero title={SiteData.title} description={SiteData.description} />
  <Section
    sectionClass="min-h-[125vh] flex items-center justify-center z-100 text-bg bg-[#2b2b2b] text-center"
    contentClass="flex flex-col-reverse items-center justify-center content-container"
    backgroundMedia={{
      image: {
        src: SolarPanels,
        imageClass:
          "opacity-80 filter brightness-50 bg-cover bg-center xl:bg-fixed",
      },
      // overlayClass: "opacity-60 filter brightness-50 bg-cover bg-center xl:bg-fixed",
    }}
  >
    <Section
      sectionClass="flex justify-center items-center gap-[var(--spacing-lg)]"
      contentClass="flex flex-col-reverse items-center justify-center content-container"
      heading={[
        {
          text: "Paul Montemurno",
          tagName: "h2",
          class: "h4 font-bold text-bg",
        },
        {
          text: "Owner and Founder",
          tagName: "h6",
          class: "h6 font-thin text-bg",
        },
      ]}
      ,
      description=`"At ${SiteData.title}, our mission is to prioritize you. When you choose to work with us, you’re not just another client—you’re part of our family. Unlike many companies tied to specific solar installers, we work solely for your best interests. We fight to secure the highest-quality products at the most competitive prices and make sure the process is smooth and stress-free every step of the way. From the first consultation to turning on your solar system, we’ll be by your side, ready to answer any question or resolve any issue. With us, you're never on your own—just call, and we’re here to help."`
      descriptionClass="lg:w-3/5 w-full text-bg text-center text-xl lg:text-2xl italic"
      headingAreaClass="flex flex-col items-center justify-center text-center gap-[var(--spacing-xs)]"
      childPlacement="top-content-section",
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="220"
        height="220"
        viewBox="0 0 120 120"
        overflow="hidden"
      >
        <text
          x="50%"
          y="50%"
          dominant-baseline="middle"
          text-anchor="middle"
          font-family="serif"
          font-size="100"
          fill="currentColor">“</text
        >
      </svg>

      <div class="founder flex justify-center items-center flex-col">
        <Image
          src={Owner}
          alt="Solar Trust Team"
          class="rounded-full w-25 h-25 object-cover my-[var(--spacing-sm)]"
          width={120}
          height={120}
          sizes="120px"
          loading="lazy"
          decoding="async"
          quality={60}
          fetchpriority="low"
        />
      </div>
    </Section>
    <Section
      sectionClass="flex justify-center items-center gap-[var(--spacing-lg)]"
      contentClass="flex justify-center items-center flex-col lg:flex-row py-[var(--spacing-lg)] w-8/10"
      itemsClass="flex justify-center items-center flex-wrap py-[var(--spacing-lg)] w-full"
      topContentClass="hidden"
      collection="partners"
      query="getAll"
      component={LogoLoop}
    >

    </Section>
  </Section>
  <Section
    sectionClass="flex justify-center min-h-[80vh] lg:min-h-[50vh] items-center flex-col gap-[var(--spacing-lg)]"
    contentClass="flex justify-center items-center flex-col-reverse lg:flex-row py-[var(--spacing-xl)] w-8/10"
    topContentClass="py-[var(--spacing-lg)] lg:w-2/3 text-center lg:text-left"
    headingAreaClass="flex justify-center flex-col items-start gap-[var(--spacing-sm)]"
    heading={{
      text: "Take your first step towards solar.",
      tagName: "h2",
      class: "h2 font-bold text-primary",
    }}
    description="We would love to sit down with you and help you explore your options. In a 60-minute meeting we could help you discover if solar is a good fit for you and your home, and see how much solar could save you. A consulation is FREE of charge and has no strings attached."
    descriptionClass="lg:w-5/6 w-full text-bg-dark"
    buttonsSectionClass="flex flex-col justify-center items-center lg:items-start mt-[var(--spacing-sm)]"
    buttonsPlacement="top-content-section"
    buttons={[
      {
        text: "Book a Consultation",
        link: "/",
        class: "btn-primary",
      },
    ]}
    childSlotClass="flex justify-center items-center flex-col lg:flex-row gap-[var(--spacing-lg)] w-full lg:w-1/3"
  >
    <Image
      src={SolarTrustTeam}
      alt="Solar Trust Team"
      class="w-355 h-80 my-[var(--spacing-sm)]"
      width={510}
      height={230}
      sizes="430px"
      loading="lazy"
      decoding="async"
      quality={60}
      fetchpriority="low"
    />
  </Section>

  <!-- Clients -->
  <!-- <Section
    sectionClass="animate-on-appear"
    collection="clients"
    query="getAll"
    heading={{ text: "Our Clients", tagName: "h2" }}
  /> -->
</BaseLayout>
