---
// src/components/StaticSections/PrimaryHero.astro
import Section from "@/components/Section.astro";
import HeroBg from "@/assets/Landing-Page-Background-1-scaled.jpg";
import { SiteData } from "@/content/SiteData";
---
<Section
  heading={
    {
      text: SiteData.tagline,
      tagName: "h1",
      className: "text-4xl md:text-6xl lg:text-7xl font-bold text-bg",
    }
  }
    description={SiteData.description}
    backgroundMedia={{
        image: {
        src: HeroBg,
        imageClass: "filter bg-cover bg-center",
        },
        // overlayClass: "bg-black opacity-50",
    }}
  buttonsSectionClass="mt-[var(--spacing-xl)]"
  sectionClass="min-h-[100vh] md:min-h-[200vh] flex items-center justify-center bg-cover bg-fixed bg-center z-100 md:p-[var(--spacing-lg)] text-bg text-xl bg-[#2b2b2b]"
/>
