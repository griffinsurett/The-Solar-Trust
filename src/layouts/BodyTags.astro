---
// BodyTags.astro
const GTM_ID = import.meta.env.PUBLIC_INTEGRATION_GTM
// console.log("GTM ID:", GTM_ID);
---
<!-- Google Tag Manager (noscript) -->  
{GTM_ID && (  
  <noscript>  
    <iframe  
      src={`https://www.googletagmanager.com/ns.html?id=${GTM_ID}`}  
      height="0"  
      width="0"  
      style="display:none;visibility:hidden"  
    ></iframe>  
  </noscript>  
)}  