---
// src/layouts/ExtendedLayout.astro
import SecondaryHero from "@/components/StaticSections/SecondaryHero.astro";
import BaseLayout from "./BaseLayout.astro";
import Section from "@/components/Section.astro";
import PartnerForm from "@/components/Forms/PartnerForm.astro";
import { SiteData } from "@/content/SiteData";
import HeroBg from "@/assets/Landing-Page-Background-1-scaled.jpg";
import { Image } from "astro:assets";
---
<BaseLayout {...Astro.props}>
  <Section
    title="Welcome to Solar Trust"
    headingAreaClass="flex flex-col items-center justify-center text-center pb-[var(--spacing-md)]"
    contentClass="flex flex-col-reverse items-center justify-center content-container"
    backgroundMedia={{
      image: {
        src: HeroBg,
        imageClass: "filter bg-cover bg-center",
      },
    }}
        heading={[
          {
            text: `Partner With Us`,
            tagName: "h2",
            class: "h2 font-bold text-bg",
          },
        ]}
    sectionClass="flex items-center justify-center min-h-[50vh]"
    contentClass="container mx-auto text-center"
    childSlotClass="flex flex-col justify-center items-center"
    >
    <Image
    src={SiteData.logo.src}
    alt={`${SiteData.title} logo`}
    class="h-auto w-60 m-0 pb-[var(--spacing-sm)]"
    format="webp"
    loading="eager"
    quality="low"
    fetchpriority="high"
    aria-hidden="true"
  />
    <slot />
    </Section>
    <div class="form-container flex justify-center items-center mt-[-70px]">
      <PartnerForm/>
    </div>
</BaseLayout>
